@page
@model ToDoListApp.Pages.ToDoList.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "ToDoList";
}

<h1>Create</h1>

<h4>ToDoItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToDoItem.Title" class="control-label"></label>
                <input asp-for="ToDoItem.Title" class="form-control" />
                <span asp-validation-for="ToDoItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.UserEmail" class="control-label"></label>
                <input asp-for="ToDoItem.UserEmail" class="form-control" />
                <span asp-validation-for="ToDoItem.UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.Description" class="control-label"></label>
                <input asp-for="ToDoItem.Description" class="form-control" />
                <span asp-validation-for="ToDoItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.DueDate" class="control-label"></label>
                <input asp-for="ToDoItem.DueDate" class="form-control" />
                <span asp-validation-for="ToDoItem.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ToDoItem.Done" /> @Html.DisplayNameFor(model => model.ToDoItem.Done)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.DoneDate" class="control-label"></label>
                <input asp-for="ToDoItem.DoneDate" class="form-control" />
                <span asp-validation-for="ToDoItem.DoneDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
